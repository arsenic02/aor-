.386
.model flat,c
.data

n dd 4
suma dd 0
k dd 1;krece se od  1 do n

.code
main proc

	lea eax,n
	mov ebx,[eax];u ebx je n
	mov esi,k;esi=ecx
	mov ecx,esi;koristi se kao brojac kod stepenovanja
	mov edi,suma
	uslov:
	cmp esi,ebx
		ja kraj

			mov edx,0
			mov eax,esi
			mul esi;brojilac
			mov ecx,esi
			dec ecx;broji od 0 do n-1
			shr eax,cl
			add edi,eax

		inc esi
	jmp uslov

	kraj:
	nop

main endp
end main 
